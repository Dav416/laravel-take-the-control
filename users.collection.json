{
  "info": {
    "name": "Take The Control - API Usuarios",
    "_postman_id": "12345678-abcd-efgh-ijkl-1234567890ab",
    "description": "Colección para probar CRUD de usuarios y autenticación en Laravel.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://127.0.0.1:8000",
      "type": "string"
    },
    {
      "key": "api_prefix",
      "value": "api",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Listar Usuarios",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/{{api_prefix}}/usuarios",
          "host": ["{{base_url}}"],
          "path": ["{{api_prefix}}", "usuarios"]
        }
      }
    },
    {
      "name": "Crear Usuario",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre_usuario\": \"Test\",\n  \"nombre_cuenta_usuario\": \"testing\",\n  \"correo_usuario\": \"test@example.com\",\n  \"clave_usuario\": \"123456\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/{{api_prefix}}/usuarios",
          "host": ["{{base_url}}"],
          "path": ["{{api_prefix}}", "usuarios"]
        }
      }
    },
    {
      "name": "Ver Usuario por ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/{{api_prefix}}/usuarios/1",
          "host": ["{{base_url}}"],
          "path": ["{{api_prefix}}", "usuarios", "1"]
        }
      }
    },
    {
      "name": "Actualizar Usuario",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre_usuario\": \"Test Actualizado\",\n  \"correo_usuario\": \"test2@example.com\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/{{api_prefix}}/usuarios/1",
          "host": ["{{base_url}}"],
          "path": ["{{api_prefix}}", "usuarios", "1"]
        }
      }
    },
    {
      "name": "Eliminar Usuario",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/{{api_prefix}}/usuarios/1",
          "host": ["{{base_url}}"],
          "path": ["{{api_prefix}}", "usuarios", "1"]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"correo_usuario\": \"test@example.com\",\n  \"clave_usuario\": \"123456\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/login",
          "host": ["{{base_url}}"],
          "path": ["login"]
        }
      }
    },
    {
      "name": "Logout",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/logout",
          "host": ["{{base_url}}"],
          "path": ["logout"]
        }
      }
    }
  ]
}
